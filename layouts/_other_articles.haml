- max = config[:other_articles_max].to_i
%h2 Other Articles
%ul.article
    - n_older_articles(max, reference_item).each do |item|
        %li
            %a(href="#{route_path(item)}" title="#{item[:title] || ''}")
                = item[:title]
            %span.alternate &mdash; #{pretty_time(item[:created_at])}
